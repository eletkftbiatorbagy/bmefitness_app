<?xml version='1.0' encoding='utf-8'?>
<widget id="hu.e-let.bmefitness" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
   <name>BME Fitness</name>
    <description>
        BME Fitness
    </description>
    <author email="e-let@e-let.hu" href="http://e-let.hu">
        e-LET Kft
    </author>
    <content src="index.html" />
    <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="phonegap-version" value="3.3.0" />
	<gap:platform name="ios" />
	<gap:platform name="android" />
    
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="true" />
    <preference name="SplashScreen" value="splash" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="5" />
    <preference name="android-targetSdkVersion" value="17" />
    <preference name="android-installLocation" value="auto" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />
    
    
    <icon gap:density="ldpi" gap:platform="android" src="res/icon/android/icon-29-ldpi.png" />
    <icon gap:density="mdpi" gap:platform="android" src="res/icon/android/icon-50-mdpi.png" />
    <icon gap:density="hdpi" gap:platform="android" src="res/icon/android/icon-72-hdpi.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="res/icon/android/icon-100-xhdpi.png" />
    
    <gap:splash gap:density="ldpi" gap:platform="android" src="res/screen/android/screen-ldpi-portrait.png" />
    <gap:splash gap:density="mdpi" gap:platform="android" src="res/screen/android/screen-mdpi-portrait.png" />
    <gap:splash gap:density="hdpi" gap:platform="android" src="res/screen/android/screen-hdpi-portrait.png" />
    <gap:splash gap:density="xhdpi" gap:platform="android" src="res/screen/android/screen-xhdpi-portrait.png" />
    
    
    <icon gap:platform="ios" src="res/icon/ios/AppIcon50x50.png" gap:platform="ios" width="50" height="50" />
	<icon gap:platform="ios" src="res/icon/ios/AppIcon50x50@2x.png" gap:platform="ios" width="100" height="100" />
    <icon gap:platform="ios" src="res/icon/ios/AppIcon57x57.png" gap:platform="ios" width="57" height="57" />
	<icon gap:platform="ios" src="res/icon/ios/AppIcon57x57@2x.png" gap:platform="ios" width="114" height="114" />
	<icon gap:platform="ios" src="res/icon/ios/AppIcon60x60.png" gap:platform="ios" width="60" height="60" />
	<icon gap:platform="ios" src="res/icon/ios/AppIcon60x60@2x.png" gap:platform="ios" width="120" height="120" />
	<icon gap:platform="ios" src="res/icon/ios/AppIcon72x72.png" gap:platform="ios" width="72" height="72" />
	<icon gap:platform="ios" src="res/icon/ios/AppIcon72x72@2x.png" gap:platform="ios" width="144" height="144" />
	<icon gap:platform="ios" src="res/icon/ios/AppIcon76x76.png" gap:platform="ios" width="76" height="76" />
	<icon gap:platform="ios" src="res/icon/ios/AppIcon76x76@2x.png" gap:platform="ios" width="152" height="152" />
    
    <gap:splash src="res/screen/ios/Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="res/screen/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />
	<gap:splash src="res/screen/ios/Default-568h.png" gap:platform="ios" width="320" height="568" />
	<gap:splash src="res/screen/ios/Default-568@2x.png" gap:platform="ios" width="640" height="1136" />
	<gap:splash src="res/screen/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />
	<gap:splash src="res/screen/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
	<gap:splash src="res/screen/ios/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />
	<gap:splash src="res/screen/ios/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
    
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.network-information" />
    
    <gap:plugin name="org.apache.cordova.file" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    
    <gap:plugin name="org.apache.cordova.file-transfer" />
    
    <gap:plugin name="org.apache.cordova.camera" />
    <feature name="Camera">
    	<param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    	<param name="ios-package" value="CDVCamera" />
	</feature>
    
    
    <gap:plugin name="com.phonegap.plugins.facebookconnect">
    	<param name="APP_ID" value="529520623830569" />
    	<param name="APP_NAME" value="Sütipédia" />
	</gap:plugin>
	<gap:plugin name="nl.x-services.plugins.socialsharing" />
	<gap:plugin name="com.badrit.emailcomposer" />
	<gap:plugin name="com.boyvanderlaak.cordova.plugin.orientationchanger" />
	
	<gap:plugin name="org.apache.cordova.device" />
	
	<gap:plugin name="com.phonegap.plugin.statusbar" />
	
    
    <gap:config-file platform="ios" parent="UIStatusBarHidden">
		<true/>
	</gap:config-file>

	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
		<false/>
	</gap:config-file>
    
    <access origin="*" />
</widget>
